                        </div>
                    </div>
                </section> -->

                <section class="availability">
                    <h2>Availability Calendar</h2>
                    <div class="calendar">
                        <div class="dates" id="calendar">
                            <!-- Calendar dates go here -->
                        </div>
                    </div>
                </section>
            </div>

            <aside>
                <form class="booking-form" action="/book" method="post">
                    <div class="form-container">
                        <label for="from">From</label>
                        <input type="date" id="from" name="from" value="<%- dateStringForToday %>">
                        <label for="to">To</label>
                        <input type="date" id="to" name="to" value="<%- dateStringForEnd %>">
                        <h3>Tickets</h2>
                        <label for="adults">Adult</label>
                        <input type="number" id="adults" name="adults" value="3">
                        <label for="children">Children</label>
                        <input type="number" id="children" name="children" value="3">
                        <h3>Add Extra</h2>
                        <div class="extra">
                            <input type="checkbox" id="parking" name="parking">
                            <label for="parking">Add parking</label>
                        </div>
                        <div class="total">
                            <span>Total:</span>
                            <span>6 people</span>
                        </div>
                        <button type="submit">Book Now</button>
                    </div>
                </form>
            </aside>
        </div>
    </main>

    <footer>
        <div class="footer-container">
            <h3>Contact</h3>
            <address>328 Queensberry Street, North Melbourne VIC 3051, Australia.</address>
            <a href="mailto:hi@viatours.com">hi@viatours.com</a>
